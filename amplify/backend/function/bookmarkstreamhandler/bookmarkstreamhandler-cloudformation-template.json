{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "Lambda resource stack creation using Amplify CLI",
	"Parameters": {
		"env": {
			"Type": "String"
		},
		"batchSize": {
			"Type": "String"
		},
		"deltaTable": {
			"Type": "String"
		},
		"ttl": {
			"Type": "String"
		},
		"storagebookmarkdeltaName": {
			"Type": "String",
			"Default": "storagebookmarkdeltaName"
		},
		"storagebookmarkdeltaArn": {
			"Type": "String",
			"Default": "storagebookmarkdeltaArn"
		},
		"StreamId": {
			"Type": "String"
		},
		"TableName": {
			"Type": "String"
		}
	},
	"Conditions": {
		"ShouldNotCreateEnvResources": {
			"Fn::Equals": [
				{
					"Ref": "env"
				},
				"NONE"
			]
		}
	},
	"Resources": {
		"EventSourceMapping": {
			"Type": "AWS::Lambda::EventSourceMapping",
			"Properties": {
				"EventSourceArn": {
					"Fn::Sub": [
						"arn:aws:dynamodb:${region}:${account}:table/${tableName}/stream/${streamId}",
						{
							"region": {
								"Ref": "AWS::Region"
							},
							"account": {
								"Ref": "AWS::AccountId"
							},
							"tableName": {
								"Ref": "TableName"
							},
							"streamId": {
								"Ref": "StreamId"
							}
						}
					]
				},
				"FunctionName": {
					"Fn::GetAtt": [
						"LambdaFunction",
						"Arn"
					]
				},
				"StartingPosition": "TRIM_HORIZON"
			}
		},
		"LambdaFunction": {
			"Type": "AWS::Lambda::Function",
			"Metadata": {
				"aws:asset:path": "./src",
				"aws:asset:property": "Code"
			},
			"Properties": {
				"Handler": "index.handler",
				"FunctionName": {
					"Fn::If": [
						"ShouldNotCreateEnvResources",
						"BookmarkStreamHandler",
						{
							"Fn::Join": [
								"",
								[
									"BookmarkStreamHandler",
									"-",
									{
										"Ref": "env"
									}
								]
							]
						}
					]
				},
				"Environment": {
					"Variables": {
						"ENV": {
							"Ref": "env"
						},
						"REGION": {
							"Ref": "AWS::Region"
						},
						"BATCH_SIZE": {
							"Ref": "batchSize"
						},
						"DELTA_TABLE": {
							"Ref": "deltaTable"
						},
						"TTL": {
							"Ref": "ttl"
						}
					}
				},
				"Role": {
					"Fn::GetAtt": [
						"LambdaExecutionRole",
						"Arn"
					]
				},
				"Runtime": "nodejs10.x",
				"Timeout": "25",
				"Code": {
					"S3Bucket": "amplify-schdlr-prod-21214-deployment",
					"S3Key": "amplify-builds/bookmarkstreamhandler-4b5a5270526b336f3431-build.zip"
				}
			}
		},
		"LambdaExecutionRole": {
			"Type": "AWS::IAM::Role",
			"Properties": {
				"RoleName": {
					"Fn::If": [
						"ShouldNotCreateEnvResources",
						"schdlrLambdaRole5d039e73",
						{
							"Fn::Join": [
								"",
								[
									"schdlrLambdaRole5d039e73",
									"-",
									{
										"Ref": "env"
									}
								]
							]
						}
					]
				},
				"AssumeRolePolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Principal": {
								"Service": [
									"lambda.amazonaws.com"
								]
							},
							"Action": [
								"sts:AssumeRole"
							]
						}
					]
				}
			}
		},
		"lambdaexecutionpolicy": {
			"DependsOn": [
				"LambdaExecutionRole"
			],
			"Type": "AWS::IAM::Policy",
			"Properties": {
				"PolicyName": "lambda-execution-policy",
				"Roles": [
					{
						"Ref": "LambdaExecutionRole"
					}
				],
				"PolicyDocument": {
					"Version": "2012-10-17",
					"Statement": [
						{
							"Effect": "Allow",
							"Action": [
								"logs:CreateLogGroup",
								"logs:CreateLogStream",
								"logs:PutLogEvents"
							],
							"Resource": {
								"Fn::Sub": [
									"arn:aws:logs:${region}:${account}:log-group:/aws/lambda/${lambda}:log-stream:*",
									{
										"region": {
											"Ref": "AWS::Region"
										},
										"account": {
											"Ref": "AWS::AccountId"
										},
										"lambda": {
											"Ref": "LambdaFunction"
										}
									}
								]
							}
						},
						{
							"Effect": "Allow",
							"Action": [
								"dynamodb:BatchWriteItem",
								"dynamodb:GetItem",
								"dynamodb:Query",
								"dynamodb:Scan",
								"dynamodb:PutItem",
								"dynamodb:UpdateItem",
								"dynamodb:DeleteItem"
							],
							"Resource": [
								{
									"Ref": "storagebookmarkdeltaArn"
								},
								{
									"Fn::Join": [
										"/",
										[
											{
												"Ref": "storagebookmarkdeltaArn"
											},
											"index/*"
										]
									]
								}
							]
						},
						{
							"Effect": "Allow",
							"Action": [
								"dynamodb:GetShardIterator",
								"dynamodb:DescribeStream",
								"dynamodb:GetRecords"
							],
							"Resource": {
								"Fn::Sub": [
									"arn:aws:dynamodb:${region}:${account}:table/${tableName}/stream/${streamId}",
									{
										"region": {
											"Ref": "AWS::Region"
										},
										"account": {
											"Ref": "AWS::AccountId"
										},
										"tableName": {
											"Ref": "TableName"
										},
										"streamId": {
											"Ref": "StreamId"
										}
									}
								]
							}
						},
						{
							"Effect": "Allow",
							"Action": "dynamodb:ListStreams",
							"Resource": "*"
						}
					]
				}
			}
		}
	},
	"Outputs": {
		"Name": {
			"Value": {
				"Ref": "LambdaFunction"
			}
		},
		"Arn": {
			"Value": {
				"Fn::GetAtt": [
					"LambdaFunction",
					"Arn"
				]
			}
		},
		"Region": {
			"Value": {
				"Ref": "AWS::Region"
			}
		},
		"LambdaExecutionRole": {
			"Value": {
				"Ref": "LambdaExecutionRole"
			}
		}
	}
}