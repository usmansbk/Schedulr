{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Description": "Lambda layer resource stack creation using Amplify CLI",
	"Parameters": {
		"layerVersion": {
			"Type": "String",
			"Default": "1"
		},
		"env": {
			"Type": "String"
		}
	},
	"Resources": {
		"LambdaLayer": {
			"Type": "AWS::Lambda::LayerVersion",
			"Properties": {
				"CompatibleRuntimes": [
					"nodejs12.x"
				],
				"Content": {
					"S3Bucket": "amplify-schdlr-prod-21214-deployment",
					"S3Key": "amplify-builds/common-build.zip"
				},
				"Description": "Lambda layer version 1",
				"LayerName": "common"
			},
			"DeletionPolicy": "Retain",
			"UpdateReplacePolicy": "Retain"
		},
		"LambdaLayerPermissionpublic1": {
			"Type": "AWS::Lambda::LayerVersionPermission",
			"Properties": {
				"Action": "lambda:GetLayerVersion",
				"LayerVersionArn": {
					"Ref": "LambdaLayer"
				},
				"Principal": "*"
			}
		}
	},
	"Conditions": {
		"HasEnvironmentParameter": {
			"Fn::Not": [
				{
					"Fn::Equals": [
						{
							"Ref": "env"
						},
						"NONE"
					]
				}
			]
		}
	},
	"Outputs": {
		"Arn": {
			"Value": {
				"Ref": "LambdaLayer"
			}
		},
		"Region": {
			"Value": {
				"Ref": "AWS::Region"
			}
		}
	}
}